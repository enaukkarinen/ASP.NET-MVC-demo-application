@model WJOArvioitava.Models.Ostos

@{
    ViewBag.Title = "Muuta";
}

<h2>Muuta ostos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ostos: @Model.Tuote.Nimi</h4>
        <hr />
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TuoteId)
        @Html.HiddenFor(model => model.YksikkoHinta)
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Maara, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Maara)
                @Html.ValidationMessageFor(model => model.Maara)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YksikkoHinta, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.YksikkoHinta)
                @Html.ValidationMessageFor(model => model.YksikkoHinta)
            </div>
        </div>

        <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Talleta" class="btn btn-default" />
    </div>
</div>
    </div>
}
<br />
<div class="row">
    @Html.ActionLink("Takaisin", "Index")
</div>
